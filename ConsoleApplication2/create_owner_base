
SET hbase.zookeeper.quorum=zookeepernode0,zookeepernode1,zookeepernode2;  
CREATE EXTERNAL TABLE OwnerBase(
	OwnerId string ,
	OwnerIdType int ,
	Name string ,
	VersionNumber string,
	YomiName string)
STORED BY 'org.apache.hadoop.hive.hbase.HBaseStorageHandler'
WITH SERDEPROPERTIES ('hbase.columns.mapping' = ':key, cf:OwnerIdType, cf:Name, cf:VersionNumber, cf:YomiName') 
TBLPROPERTIES ('hbase.table.name' = 'OwnerBase');
